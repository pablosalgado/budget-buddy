<!DOCTYPE html>
<html>
<head>
  <title>Sign Up - Budget Buddy</title>
</head>
<body>
  <h1>Sign Up</h1>

  <%= form_with(model: @user, url: registration_path, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :email_address, "Email" %><br>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= form.label :password %><br>
      <%= form.password_field :password, required: true, autocomplete: "new-password" %>
      <small>Must be at least 8 characters with uppercase, lowercase, and digit</small>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm Password" %><br>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
    </div>

    <div>
      <%= form.submit "Sign Up" %>
    </div>
  <% end %>

  <p>
    Already have an account? <%= link_to "Sign in", new_session_path %>
  </p>
</body>
</html>
